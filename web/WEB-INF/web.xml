<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>DisplayMessage</servlet-name>
        <servlet-class>ch.hearc.ig.odi.serie7.servlets.DisplayMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayInformations</servlet-name>
        <servlet-class>ch.hearc.ig.odi.serie7.servlets.DisplayInformations</servlet-class>
        <init-param>
            <param-name>prenom</param-name>
            <param-value>Melissa</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AskNameToDisplay</servlet-name>
        <servlet-class>ch.hearc.ig.odi.serie7.servlets.AskNameToDisplay</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AskNameToStoreToSession</servlet-name>
        <servlet-class>ch.hearc.ig.odi.serie7.servlets.AskNameToStoreToSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayMessage</servlet-name>
        <url-pattern>/DisplayMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayInformations</servlet-name>
        <url-pattern>/DisplayInformations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AskNameToDisplay</servlet-name>
        <url-pattern>/AskNameToDisplay</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AskNameToStoreToSession</servlet-name>
        <url-pattern>/AskNameToStoreToSession</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <!--<welcome-file>index.jsp</welcome-file>-->
        <!--<welcome-file>DisplayMessage</welcome-file>-->
        <!--<welcome-file>DisplayInformations</welcome-file>-->
        <!--<welcome-file>AskNameToDisplay</welcome-file>-->
        <welcome-file>AskNameToStoreToSession</welcome-file>
    </welcome-file-list>
</web-app>
